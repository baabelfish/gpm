#!/bin/bash

declare -a PACKAGES
declare -A URLS
declare -A SOURCES
declare -A LINKS
declare -A BUILD
declare -A VERSION

# TPM_DIR = Path where tpm packages are installed to

# TPM_BIN = Path where links are created, user should add this to PATH himself
# Directory should also be completely devoted for TPM as "tpm clean" will delete unnecessary files

function confirm {
        read -r -p "$1 [Y/n] " yes
        yes=${yes,,} # tolower
        [[ $yes =~ ^(yes|y| ) ]]
}

## $1 - url or github suffix
# Convert url to github form
githubify() {
    local regex='^http|^git:'
    if [[ $1 =~ $regex ]]; then
        echo "$1"
    else
        echo "https://github.com/${1}"
    fi
}

# $1 = Pkg name
# $2 = file to source
addSource() {
    if [[ $HACK_PKG ]]; then
        local name=$HACK_PKG
        local source=$1
    else
        local name=$1
        local source=$2
    fi
    SOURCES["$name"]="$source ${SOURCES["$name"]}"
}

# $1 = Pkg name
# $2 = Target name
# $3 = Source filename
addBin() {
    if [[ $HACK_PKG ]]; then
        local name=$HACK_PKG
        local target=$1
        local source=$2
    else
        local name=$1
        local target=$2
        local source=$3
    fi
    # Target name has to be unique (but package might have multiple links)
    # index by target name
    LINKS["$target"]="$name $source"
}

# $1 = Pkg name
# $2 = Command
build() {
    if [[ $HACK_PKG ]]; then
        local name=$HACK_PKG
        local command=$1
    else
        local name=$1
        local command=$2
    fi
    BUILD["$name"]="$command"
}

# $1 = Pkg name
# $2 = Version
# I don't think it would be useful to be able to set this from packages .tpm.sh (thus, no HACK_PKG hack)
version() {
    VERSION["$1"]="$2"
}

# $1 = Pkg name
# $2 = Url
plug() {
    PACKAGES+=($1)
    URLS["$1"]="$2"
}

installPackage() {
    local url=${URLS["$1"]}
    git clone $(githubify $url) $TPM_DIR/$1

    buildPackage $1
}

updatePackage() {
    cd $TPM_DIR/$1
    git pull
    buildPackage $1
}

buildPackage() {
    local build_command=${BUILD["$1"]}
    if [[ $build_command ]]; then
        cd $TPM_DIR/$1
        $build_command
    fi
}

commit() {
    if [[ $CLI ]]; then
        return
    fi

    for name in ${PACKAGES[@]}; do
        if [[ ! -d $TPM_DIR/$name ]] && confirm "$name is not installed. Install?"; then
            installPackage $name
        fi

        # If still not installed
        if [[ ! -d $TPM_DIR/$name ]]; then
            echo "$name is not installed?"
        fi

        if [[ -d $TPM_DIR/$name ]]; then
            if [[ -f $TPM_DIR/$name/.tpm.sh ]]; then
                HACK_PKG=$name
                . $TPM_DIR/$name/.tpm.sh
                unset HACK_PKG
            fi
        fi

        for source in ${SOURCES["$name"]}; do
            source $TPM_DIR/$name/$source
        done
    done

    # Make sure links are created
    for target in ${!LINKS[@]}; do
        local info=(${LINKS["$target"]})
        local pkg=${info[0]}
        local source=${info[1]}

        if [[ -f $TPM_DIR/$pkg/$source ]]; then
            if [[ ! -f $TPM_BIN/$target ]]; then
                echo ln -s $TPM_DIR/$pkg/$source $TPM_BIN/$target
                ln -s $TPM_DIR/$pkg/$source $TPM_BIN/$target
            fi
        fi
    done
}

# CLI, removed old packages and symlinks
clean() {
    CLI=true

    . $HOME/.tpm.sh

    for x in $TPM_DIR/*/.tpm.sh; do
        HACK_PKG=$name
        . $x
        unset HACK_PKG
    done

    local extras=""
    for x in $TPM_DIR/*; do
        local name=$(basename $x)
        if [[ -z ${URLS["$name"]} ]]; then
            echo "Found extra package: $name"
            extras="$extras $x"
        fi
    done

    if [[ $extras ]] && confirm "Remove extra packages"; then
        rm -rf $extras
    fi

    extras=""
    for x in $TPM_BIN/*; do
        local link=$(readlink $x)
        if [[ -z $link ]]; then
            echo "Found A FILE: $x at bin directory. Directory should only contain symlinks."
            continue
        fi

        local name=$(basename $x)
        if [[ -z ${LINKS["$name"]} ]]; then
            echo "Found extra link $name"
            extras="$extras $x"
        fi
    done

    if [[ $extras ]] && confirm "Remove extra links"; then
        rm -r $extras
    fi
}

# CLI, update packages
update() {
    CLI=true
    . $HOME/.tpm.sh

    for dir in $TPM_DIR/*; do
        local pkg=$(basename $dir)
        echo "Updating $pkg"
        updatePackage $pkg
    done

    unset CLI
    commit
}

# CLI, install missing
install() {
    CLI=true
    . $HOME/.tpm.sh

    unset CLI
    commit
}

# CLI, run command
case $1 in
    'clean')   clean ;;
    'install') install ;;
    'update')  update ;;
    *) ;;
esac
